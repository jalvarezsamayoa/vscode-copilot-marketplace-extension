{
  "name": "vscode-copilot-marketplace",
  "displayName": "VSCode Copilot Marketplace",
  "description": "VS Code extension for managing and discovering Copilot extensions and agents.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-copilot-marketplace.listMarketplace",
        "title": "Copilot Marketplace: List Installed Marketplaces"
      },
      {
        "command": "vscode-copilot-marketplace.addMarketplace",
        "title": "Copilot Marketplace: Add Marketplace"
      },
      {
        "command": "vscode-copilot-marketplace.removeMarketplace",
        "title": "Copilot Marketplace: Remove Marketplace"
      },
      {
        "command": "vscode-copilot-marketplace.updateMarketplace",
        "title": "Copilot Marketplace: Update Marketplace"
      },
      {
        "command": "vscode-copilot-marketplace.listPlugins",
        "title": "Copilot Marketplace: List Plugins"
      },
      {
        "command": "vscode-copilot-marketplace.addPlugin",
        "title": "Copilot Marketplace: Add Plugin"
      },
      {
        "command": "vscode-copilot-marketplace.removePlugin",
        "title": "Copilot Marketplace: Remove Plugin"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "vsix": "npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/ajv": "^0.0.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "sinon": "^21.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "simple-git": "^3.30.0"
  }
}
