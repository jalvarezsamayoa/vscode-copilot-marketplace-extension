{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Known Marketplaces Configuration",
  "description": "Configuration file defining known Copilot plugin marketplaces, their sources, and installation locations",
  "type": "object",
  "additionalProperties": {
    "type": "object",
    "required": ["source", "installLocation", "lastUpdated"],
    "properties": {
      "source": {
        "type": "object",
        "description": "Source information for the marketplace",
        "required": ["source", "repo"],
        "properties": {
          "source": {
            "type": "string",
            "description": "Source type (e.g., 'github')",
            "enum": ["github", "directory"]
          },
          "repo": {
            "type": "string",
            "description": "Repository identifier in format 'owner/repo'",
            "pattern": "^[a-zA-Z0-9._-]+/[a-zA-Z0-9._-]+$"
          }
        },
        "additionalProperties": false
      },
      "installLocation": {
        "type": "string",
        "description": "File system path where the marketplace is installed"
      },
      "lastUpdated": {
        "type": "string",
        "description": "ISO 8601 timestamp of last update",
        "format": "date-time"
      }
    },
    "additionalProperties": false
  },
  "examples": [
    {
      "vscode-copilot-plugins": {
        "source": {
          "source": "github",
          "repo": "jalvarezsamayoa/vscode-copilot-plugins"
        },
        "installLocation": "/Users/javieralvarezsamayoa/.copilot/plugins/marketplaces/vscode-copilot-plugins",
        "lastUpdated": "2025-12-23T14:40:40.045Z"
      }
    }
  ]
}
